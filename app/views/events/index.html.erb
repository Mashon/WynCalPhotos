<p id="notice"><%= notice %></p>

<br><br>
<div class="header">
  <p>WynCal</p>
  <br>
  <%= link_to "<i class='fa fa-at'></i>".html_safe, about_path %>
</div><br><br>


<div class="upcoming">
<center><h3>List of Upcoming Events</h3></div></center>


  <div class="events">
    <% @events.each do |event| %>
      <p><%= event.name %>
      <%= event.start_date.strftime("%A, %b %d") %>
      <%= link_to 'Show', event %></p>
    <% end %>
  </div>
<br>

<% if ( (@page - 1) > 0 ) %>
  <%= link_to "Previous page", page: @page - 1 %>
<% end %>

<% if @display_next %>
  <%= link_to "Next page", page: @page + 1 %>
<% end %>

<br><br><br>

<div class="newevent">
<%= link_to 'Add a New Event', new_event_path %>
</div>
