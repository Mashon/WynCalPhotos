<p id="notice"><%= notice %></p>

<br><br>
<div class="header">
  <p>WynCal</p>
  <br>
  <%= link_to "<i class='fa fa-home'></i>".html_safe, events_path %>
</div><br><br>

<div class="events">
  <p>
    <strong>Name:</strong>
    <%= @event.name %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @event.start_date.strftime("%A, %b %d") %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>

  <h2 class="center">Comments</h2>
  <% @event.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added: <%= time_ago_in_words(review.created_at) %> ago
  </p>
  <% end %>

  <div class="comment_input">
    <h3>New Comment</h3>
    <%= render 'reviews/form' %>
  </div>
</div>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
