<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<h3>Comments</h3>
<% @event.reviews.each do |review| %>
<p>
  <%= review.comment %>
  <br>
  Added on: <%= review.created_at %>
</p>
<% end %>

<h3>New Comment</h3>
<%= render 'reviews/form' %>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
